<configs>
		<append xpath="/buffs">
		  <!-- Bad Company -->
		  <!-- bombers -->
		  <buff name="SuicideBomberInit" duration="16" ffcheck="true" castsound="malehateattack" actions="attach(ParticleEffects/p_onFire, @impact)" onexpired="SuicideBomberTrigger">
			<!-- Adjust duration to lessen or extend the time from first aggro and trigger activation -->
			<modify id="0" stat="speedmodifier" modifyMaxValue="1"/>
			<modify id="1" stat="speedmodifier" modifyValue="1"/>
		  </buff>
		  <buff name="SuicideBomberTrigger" duration="1" ffcheck="true" castsound="malehateattack" onexpired="SuicideBomberCharge">
			<modify id="0" stat="health" setValue="50"/>
			<!-- this needs to be less than 40% of the max health of the entity -->
		  </buff>
		  <buff name="SuicideBomberCharge" duration="20" ffcheck="true" actions="attach(ParticleEffects/p_onFire, @impact)">
			<modify id="0" stat="speedmodifier" modifyMaxValue="1"/>
			<modify id="1" stat="speedmodifier" modifyValue="1"/>
			<modify id="2" stat="health" setValue="500"/>
		  </buff>

		  <buff name="BabyBoomerInit" duration="16" ffcheck="true" castsound="zombiefemalescoutalert" actions="attach(ParticleEffects/p_onFire, @impact)" onexpired="BabyBoomerTrigger">
			<modify id="0" stat="speedmodifier" modifyMaxValue="1"/>
			<modify id="1" stat="speedmodifier" modifyValue="1"/>
		  </buff>
		  <buff name="BabyBoomerTrigger" duration="1" ffcheck="true" actions="attach(ParticleEffects/p_onFire, @impact)" onexpired="BabyBoomerBobble">
			<modify id="0" stat="speedmodifier" modifyMaxValue="1"/>
			<modify id="1" stat="speedmodifier" modifyValue="1"/>
			<modify id="2" stat="health" setValue="10"/>
			<!-- this needs to be less than 40% of the max health of the entity -->
		  </buff>
		  <buff name="BabyBoomerBobble" duration="20" ffcheck="true" actions="attach(ParticleEffects/p_onFire, @impact)">
			<modify id="0" stat="speedmodifier" modifyMaxValue="1"/>
			<modify id="1" stat="speedmodifier" modifyValue="1"/>
			<modify id="2" stat="health" setValue="100"/>
		  </buff>

		  <!-- Valmod -->
		  <buff name="Rusher" mutex="burning" duration="5" debuffif="+water greater 1" ffcheck="true" actions="attach(ParticleEffects/p_onFire, @impact)">
			<modify id="0" stat="speedmodifier" modifyMaxValue="1"/>
			<modify id="1" stat="speedmodifier" modifyValue="1"/>
		  </buff>
		  <buff name="BossRegen" mutex="AcidSplash" duration="5.0" ffcheck="true" actions="attach(Items/Weapons/Ranged/Vomit/vomitBulbPrefab, @impact)"/>
		</append>
</configs>