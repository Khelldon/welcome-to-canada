<remove xpath="/spawning/biome[@name='city' or @name='city_wasteland' or @name='wasteland_hub' or @name='pine_forest' or @name='burnt_forest' or @name='desert' or @name='wasteland' or @name='snow']"/>
<append xpath="/spawning">

	<biome name="city">
        <!-- Night Zombies -->
		<spawn maxcount="12" respawndelay="1" time="Night" entitygroup="ZombiesNight" />
        <!-- City Animals -->
		<spawn maxcount="4" respawndelay="7" time="Day" entitygroup="KheldonsAnimalsCanadaCity" spawnDeadChance="0" />
		<spawn maxcount="6" respawndelay="7" time="Night" entitygroup="KheldonsAnimalsCanadaCity" spawnDeadChance="0" />
	</biome>

	<biome name="city_wasteland">
        <!-- Night Zombies -->
		<spawn maxcount="2" respawndelay="1" time="Night" entitygroup="ZombiesBoss" />
		<spawn maxcount="12" respawndelay="1" time="Night" entitygroup="ZombiesWastelandNight" />
        <!-- City Animals -->
		<spawn maxcount="4" respawndelay="7" time="Day" entitygroup="KheldonsAnimalsCanadaCity" spawnDeadChance="0" />
