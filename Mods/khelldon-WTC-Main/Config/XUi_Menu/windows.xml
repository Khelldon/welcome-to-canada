<!-- ######################################################### -->
<!-- ######################################################### -->
<!-- Khelldon - Add my logo and background - SO Khaine -->
<!-- ######################################################### -->
<!-- ######################################################### -->

<set xpath="/windows/window[@name='menuBackground']/texture[@name='bgTexture']/@texture">@modfolder:Textures/UI/MenuBG.png</set>
